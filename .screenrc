escape ^z^z
defscrollback 10000
autodetach on
startup_message off
term xterm-256color
vbell off
shell zsh

# hardstatus and caption
hardstatus on
hardstatus alwayslastline '%{= .b}%H%{-} %L=%-w%45L>%{=u b.}%n %t%{-}%+w %-17<%=%m/%d %02c:%s'
caption always '%?%F%{= bw}%:%{= wk}%?%2n%f%07=%t%='

# emacs keybindings for navigation in copy mode
markkeys ^B=Y:^F=V:h=^B:l=^F:0=^A:$=^E:^U=^Y:^D=^V
# C-space sets mark.
markkeys ' '=^@
