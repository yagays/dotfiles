# Load zsh config files
[ -f "$HOME/.zsh/exports.zsh" ] && source "$HOME/.zsh/exports.zsh"
[ -f "$HOME/.zsh/directory.zsh" ] && source "$HOME/.zsh/directory.zsh"
[ -f "$HOME/.zsh/history.zsh" ] && source "$HOME/.zsh/history.zsh"
[ -f "$HOME/.zsh/prompt.zsh" ] && source "$HOME/.zsh/prompt.zsh"
[ -f "$HOME/.zsh/misc.zsh" ] && source "$HOME/.zsh/misc.zsh"
[ -f "$HOME/.zsh/abbreviation.zsh" ] && source "$HOME/.zsh/abbreviation.zsh"
[ -f "$HOME/.zsh/zinit.zsh" ] && source "$HOME/.zsh/zinit.zsh"
[ -f "$HOME/.zsh/completions.zsh" ] && source "$HOME/.zsh/completions.zsh"
[ -f "$HOME/.zsh/aliases.zsh" ] && source "$HOME/.zsh/aliases.zsh"
[ -f "$HOME/.zsh/functions.zsh" ] && source "$HOME/.zsh/functions.zsh"
[ -f "$HOME/.zsh/claude.zsh" ] && source "$HOME/.zsh/claude.zsh"

# Load local machine-specific settings (not managed by chezmoi)
[ -f "$HOME/.zshrc.local" ] && source "$HOME/.zshrc.local"
